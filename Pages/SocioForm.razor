@page "/socioform"
@using test1.Models
@using test1.Services

<h1>Formulario de Socio</h1>

<EditForm Model="@socio" OnValidSubmit="HandleValidSubmit">
    <DataAnnotationsValidator />
    <ValidationSummary />

    <!-- Datos personales -->
    <PersonalDataForm Socio="@socio" TipoDocumentoList="@tipoDocumento" ProvinciasList="@provincias" />

    <!-- Archivos -->
    <hr />
    <h4 class="mt-4">Documentación</h4>
    <ArchivosForm Archivos="@socio.Archivos" />

    <!-- Contacto de emergencia -->
    <hr />
    <h4 class="mt-4">Contacto de Emergencia</h4>
    <EmergenciaForm ContactoEmergencia="@socio.ContactoEmergencia" />

    <!-- Selector de tipo Inscripción -->
    <div class="card-deck mb-4">
        <div class="card @(tipoFormularioSeleccionado == "Socio" ? "border-primary" : "")"
             @onclick="SeleccionarSocio">
            <div class="card-body text-center">
                <h5 class="card-title">Socio</h5>
                <p class="card-text">Formulario para inscripción completa de socio.</p>
            </div>
        </div>
        <div class="card @(tipoFormularioSeleccionado == "Escuelita" ? "border-primary" : "")"
             @onclick="SeleccionarEscuelita">
            <div class="card-body text-center">
                <h5 class="card-title">Escuelita Deportiva</h5>
                <p class="card-text">Solo actividades deportivas para niños.</p>
            </div>
        </div>
    </div>





    @if (tipoFormularioSeleccionado == "Socio")
    {
        <h5 class="mt-4">Implementar formulario para Socio</h5>

    }
    else if (tipoFormularioSeleccionado == "Escuelita")
    {
        <h5 class="mt-4">Implementar formulario para Escuelita</h5>
    }

    <button type="submit" class="btn btn-primary mt-3">Crear Socio</button>
</EditForm>

@if (mensajeExito)
{
    <div class="alert alert-success mt-3">
        Socio creado exitosamente.
    </div>
}


