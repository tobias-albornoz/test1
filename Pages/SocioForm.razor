@page "/socioform"
@using test1.Models
@using test1.Services

<h3>Formulario de Socio</h3>

<EditForm Model="@socio" OnValidSubmit="HandleValidSubmit">
    <DataAnnotationsValidator />
    <ValidationSummary />

    <!-- Datos personales -->
    <PersonalDataForm Socio="@socio" TipoDocumentoList="@tipoDocumento" />

    <!-- Archivos -->
    <h5 class="mt-4">Documentación</h5>
    <ArchivosForm Archivos="@socio.Archivos" />

    <!-- Contacto de emergencia -->
    <h5 class="mt-4">Contacto de Emergencia</h5>
    <EmergenciaForm ContactoEmergencia="@socio.ContactoEmergencia" />

    <button type="submit" class="btn btn-primary mt-3">Crear Socio</button>
</EditForm>

@if (mensajeExito)
{
    <div class="alert alert-success mt-3">
        Socio creado exitosamente.
    </div>
}
